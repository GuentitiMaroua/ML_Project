# ======================================
# CONFIGURATION - SmartCoach Pro
# ======================================

# Database
DATABASE_URL=sqlite:///./data/smartcoach.db

# Sécurité
SECRET_KEY=smartcoach-secret-key-change-in-production-2024
JWT_SECRET=jwt-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# Environnement
ENV=development

# Logging
LOG_LEVEL=INFO
